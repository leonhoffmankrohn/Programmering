<Window x:Class="Övning_5._3_Klient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Övning_5._3_Klient"
        mc:Ignorable="d"
        Title="MainWindow" Height="auto" Width="500">
    <Grid>
        <StackPanel>
            <WrapPanel HorizontalAlignment="Right" Margin="10">
                <Label>Serverns IP-adress: </Label>
                <TextBox Margin="100,0,20,0" MinWidth="100" Name="tbxIP">127.0.0.1</TextBox>
            </WrapPanel>
            <Button x:Name="btnAnslut" Content="Anslut" Width="200px" HorizontalAlignment="Right" Margin="10" Click="btnAnslut_Click"></Button>
            <GroupBox Header="Utkorg" Margin="10">
                <TextBox ScrollViewer.CanContentScroll="true" Height="200" Name="tbxMessage">Test test test</TextBox>
            </GroupBox>
            <Button Margin="10" x:Name="btnSänd" Click="btnSänd_Click" IsEnabled="False">Sänd</Button>
        </StackPanel>
    </Grid>
</Window>
